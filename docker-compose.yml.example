version:            '3'
services:

# mhct server
  mhct:
    build:
      dockerfile: fpm-nginx_xdebug.dockerfile
    container_name: mhct
    hostname:       mhct
    ports:
      - "8080:8080"
      - "9003:9003"
    volumes:
      - .:/var/www/html

# mh-hunt-helper DB
  mhct-db:
    image:          tsitu/mhct-db-docker:latest
    container_name: mhct-db
    hostname:       mhct-db
    ports:
      - "3306:3306"

